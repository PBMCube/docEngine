<!DOCTYPE html>
<html lang="{{ cosmo.language }}">
<head>
    <base href="{{ cosmo.mainConfig.basePath }}">
    <link href="favicon.ico" rel="shortcut icon">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
    <meta name="viewport" content="width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=no">
    <!--[if lt IE 9]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:700,400,300|Source+Code+Pro:200,400' rel='stylesheet'
          type='text/css'>
    <link href="{{ cosmo.themeFolder }}/css/main.css" type="text/css" rel="stylesheet" media="screen">
    {% for file in cosmo.cssFiles %}
        <link href="{% if file.local %}{{ cosmo.themeFolder }}/css/{{ file.url }}{% else %}{{ file.url }}{% endif %}"
              type="text/css" rel="stylesheet" media="{{ file.media }}">
    {% endfor %}
    <title>{{ cosmo.mainConfig.title }} - {{ config.title }}</title>
    {% for file in cosmo.headerJavaScriptFiles %}
        <script type="text/javascript"
                src="{% if file.local %}{{ cosmo.themeFolder }}/js/{{ file.url }}{% else %}{{ file.url }}{% endif %}"></script>
    {% endfor %}
</head>
<body class="{{ cosmo.currentPage.type }}">
<div class="header">
    <div class="wrap">
        <span class="logo">{{ cosmo.mainConfig.title }}</span>
        {% if cosmo.mainConfig.version %}<span class="version">v {{ cosmo.mainConfig.version }}</span>{% endif %}

        {{ cosmo.callHook("renderHeader", "")|raw }}

        {{ cosmo.renderLanguageWidget()|raw }}
    </div>
</div>

<div class="bodywrap">
    <div class="body">
        <div class="navigation">
            {% set pages = cosmo.getPages() %}
            {% if pages|length %}
                <div class="navigationBlock">
                    <ul>
                        {% for page in pages %}
                            <li{% if cosmo.requestURL == page.url %} class="active"{% endif %}><a
                                        href="{{ page.url }}">{{ page.title }}</a></li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}

            {% set pages = cosmo.getArticles() %}
            {% if pages|length %}
                <div class="navigationBlock">
                    <h3>{{ lang.navigationHeadlineArticles }}</h3>
                    <ul>
                        {% for page in pages %}
                            <li{% if cosmo.requestURL == page.url %} class="active"{% endif %}><a
                                        href="{{ page.url }}">{{ page.title }}</a></li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}

            {% set pages = cosmo.getReferences() %}
            {% if pages|length %}
                <div class="navigationBlock">
                    <h3>{{ lang.navigationHeadlineReferences }}</h3>
                    <ul>
                        {% for page in pages %}
                            <li{% if cosmo.requestURL == page.url %} class="active"{% endif %}><a
                                        href="{{ page.url }}">{{ page.title }}</a></li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}
        </div>
        <div class="content">
            <div class="content-content">
                {{ cosmo.content|raw }}
            </div>
            <div class="content-discussion">
                {% if cosmo.mainConfig.disqus %}
                <div id="disqus_thread"></div>
                <script type="text/javascript">
                    /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
                    var disqus_shortname = '{{ cosmo.mainConfig.disqus }}'; // required: replace example with your forum shortname

                    /* * * DON'T EDIT BELOW THIS LINE * * */
                    (function (){
                        var dsq = document.createElement('script');
                        dsq.type = 'text/javascript';
                        dsq.async = true;
                        dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
                        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
                    })();
                </script>
                <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments
                        powered by Disqus.</a></noscript>
                <a href="http://disqus.com" class="dsq-brlink">comments powered by <span
                            class="logo-disqus">Disqus</span></a>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<div class="footer">
    <div class="wrap">
        Made with <a href="http://github.com/paratron/cosmo">cosmo</a>

        {{ cosmo.callHook("renderFooter", "")|raw }}
    </div>
</div>
</body>
</html>